<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.XImagemView">

    <ScrollView>
        <StackLayout>
            <Label Text="Imagem normal"/>
            <Image Source="teste.png" WidthRequest="300" HeightRequest="300"></Image>

            <Label Text="Outra imagem com aspect fill"/>
            <Image Source="teste.png" WidthRequest="300" HeightRequest="300" Aspect="Fill"></Image>

            <Label Text="Outra imagem com aspect fit"/>
            <Image Source="teste.png" WidthRequest="300" HeightRequest="300" Aspect="AspectFit"></Image>

            <Label Text="Outra imagem com aspect Aspectfill"/>
            <Image Source="teste.png" WidthRequest="300" HeightRequest="300" Aspect="AspectFill"></Image>

        </StackLayout>
    </ScrollView>
</ContentPage>