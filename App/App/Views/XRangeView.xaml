<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.XRangeView">


    <StackLayout>
        <Label x:Name="txtSlider" Text="50"></Label>

        <Slider Minimum="0" Maximum="100" Value="50" ValueChanged="Slider_ValueChanged" />



        <Label x:Name="txtStepper" Text="0"></Label>
        <Stepper Minimum="0" Maximum="100" Increment="2" Value="0" ValueChanged="Stepper_ValueChanged"></Stepper>

    </StackLayout>


</ContentPage>